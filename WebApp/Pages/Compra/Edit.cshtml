@page
@model WebApp.Pages.Compra.EditModel
@{
}
<div id="AppEdit" class="container-fluid" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>

    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar Compra" : "Nuevo Compra")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdCompra" v-model="Entity.IdCompra" />

                <div class="form-group mb-3">
                    <label for="Entity.NombreCompleto" class="form-label">Cliente:</label>
                    <select asp-for="Entity.ClienteId" class="form-select" v-model="Entity.ClienteId"
                            asp-items="@(new SelectList(Model.ClientesLista, "ClienteId", "NombreCompleto"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Descripcion" class="form-label">Producto:</label>
                    <select asp-for="Entity.ProductoId" class="form-select" v-model="Entity.ProductoId"
                            asp-items="@(new SelectList(Model.ProductoLista, "ProductoId", "Descripcion"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.FechaCompra" class="form-label">FechaCompra:</label>
                    <input type="number" class="form-control" asp-for="Entity.FechaCompra" v-model="Entity.FechaCompra" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Monto" class="form-label">Monto:</label>
                    <input type="number" class="form-control" asp-for="Entity.Monto" v-model="Entity.Monto" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Impuesto" class="form-label">Impuesto:</label>
                    <input type="number" class="form-control" asp-for="Entity.Impuesto" v-model="Entity.Impuesto" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Total" class="form-label">Total:</label>
                    <input type="number" class="form-control" asp-for="Entity.Total" v-model="Entity.Total" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Observaciones" class="form-label">Observaciones:</label>
                    <input type="text" class="form-control" asp-for="Entity.Observaciones" v-model="Entity.Observaciones" maxlength="250" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado:</label>
                    <input type="checkbox" class="form-check-input" asp-for="Entity.Estado" v-model="Entity.Estado" />
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar" : "Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Compra/Edit.js"></script>
}
